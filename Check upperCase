#include <cctype>
#include <iostream>
#include <cstring>

using namespace std;

int main()
{
    char str[] = "This"; // Change this according to your need 

    if (isupper(str[0]))
    {
        cout << " The 1st character is Upper case " << endl;
    }
    else
    {
        cout << " The 1st character is lower case " << endl;
    }
    return 0;
}
